footer.footer
    h2.footer__title Get in touch
    ul.footer__social-list
        li.footer__social-item
            a.footer__link(href="https://ru-ru.facebook.com" target='_blank')
                svg
                    use(xlink:href='images/sprite.svg#facebook-footer')
        li.footer__social-item
            a.footer__link(href="https://twitter.com" target='_blank')
                svg
                    use(xlink:href='images/sprite.svg#twitter-footer')
        li.footer__social-item
            a.footer__link(href="https://support.google.com" target='_blank')
                svg
                    use(xlink:href='images/sprite.svg#google-footer')
        li.footer__social-item
            a.footer__link(href="https://www.linkedin.com" target='_blank')
                svg
                    use(xlink:href='images/sprite.svg#in-footer')
